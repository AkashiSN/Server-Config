#!/bin/sh

kc="/usr/bin/kubectl --kubeconfig=/etc/kubernetes/admin.conf"

$kc patch cronjobs wordpress-cronjob -n wordpress -p '{"spec" : {"suspend" : true }}'
$kc scale statefulset wordpress -n wordpress --replicas=0
$kc scale statefulset wordpress-mariadb -n wordpress --replicas=0
$kc scale deployment wordpress-redis -n wordpress --replicas=0