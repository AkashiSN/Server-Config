apiVersion: v1
kind: PersistentVolume
metadata:
  name: nextcloud-pv
spec:
  capacity:
    storage: 30Gi
  accessModes:
    - ReadWriteOncePod
  persistentVolumeReclaimPolicy: Retain
  storageClassName: iscsi-ssd-storage
  claimRef:
    namespace: nextcloud
    name: app-nextcloud-0
  iscsi:
    targetPortal: "{{ truenas_addr }}:3260"
    iqn: iqn.2005-10.org.freenas.ctl:nextcloud
    lun: 0
    fsType: xfs
    readOnly: false
---
