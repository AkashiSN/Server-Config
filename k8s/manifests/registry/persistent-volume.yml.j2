apiVersion: v1
kind: PersistentVolume
metadata:
  name: registry-pv
spec:
  capacity:
    storage: 128Gi
  accessModes:
    - ReadWriteOncePod
  persistentVolumeReclaimPolicy: Retain
  storageClassName: iscsi-ssd-storage
  claimRef:
    namespace: registry
    name: data-registry-0
  iscsi:
    targetPortal: "{{ truenas_addr }}:3260"
    iqn: iqn.2005-10.org.freenas.ctl:registry
    lun: 0
    fsType: xfs
    readOnly: false